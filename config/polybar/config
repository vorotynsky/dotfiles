[bar/mybar]
monitor = ${env:MONITOR:}
; Note: With this most WMs will no longer reserve space for 
; the bar and it will overlap other windows. You need to configure
; your WM to add a gap where the bar will be placed.
override-redirect = fasle
width = 100%
height = 25
fixed-center = true

background = #101010
radius = 0
line-size = 2
line-color = #fff
padding-right = 0
module-margin = 1

font-0 = Inconsolata for Powerline:bold:size=10;3
font-1 = FontAwesome:style=Solid:size=10;3
font-2 = CaskaydiaCove Nerd Font Mono:size=10;3

modules-left = i3
modules-center = date sep exam sep day 
modules-right = wireless-network sep memory sep backlight sep battery

separator = 
dim-value = 1.0

tray-position = right
tray-detached = false
tray-maxsize = 16
tray-background = ${root.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
tray-scale = 1.0

dpi-x = 135
dpi-y = 135

enable-ipc = false

wm-name = i3
wm-restack = i3

[module/i3]
type = internal/i3
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = true

index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true

label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-foreground = #98D1CE

label-focused = %index%
label-focused-background = #245361
label-focused-padding = 1
label-focused-foreground = #98D1CE

label-mode = %mode%
label-mode-background = #245361
label-mode-padding = 1
label-mode-foreground = #98D1CE


[module/date]
type = internal/date
interval = 1.0

date = %d.%m %Y%
time = %H:%M
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

label = %date% %time%
label-font = 0
label-foreground = #98D1CE


[module/wireless-network]
type = internal/network
interface = wlp1s0

format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>

label-connected = 直
label-connected-foreground = #eefafafa

label-disconnected = 睊
label-disconnected-foreground = #66ffffff


[module/exam]
type = custom/script

exec = $HOME/.config/polybar/toexams.py
tail = true
interval = 3600

format = <label>
format-foreground = #dd2b1f


[module/day]
type = custom/script

exec = $HOME/.config/polybar/daypersent.py
tail = true
interval = 9

format = <label>
#format-background = #999
format-foreground = #ffff66


[module/cpu]
type = internal/cpu

interval = 0.5

label =  %percentage:2%%
label-foreground = #33859D


[module/memory]
type = internal/memory

interval = 0.5
format = <label>

label = %gb_used%
label-foreground = #888BA5


[module/battery]
type = internal/battery

full-at = 99

; $ ls -1 /sys/class/power_supply/
battery = BAT1
adapter = ADP1

poll-interval = 5

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

label-charging = %percentage:2%%
label-charging-foreground = #26A98B
label-discharging = %percentage:2%%
label-discharging-foreground = #EDB54B
label-full = %percentage:2%%
label-full-foreground = #31A354

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = #EDB54B

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = #26A98B
; Framerate in milliseconds
animation-charging-framerate = 750

; Only applies if <animation-discharging> is used
animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-foreground = #DCA060
; Framerate in milliseconds
animation-discharging-framerate = 500


[module/backlight]
type = internal/backlight

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
card = amdgpu_bl0

format = <ramp> 
format-foreground = #ffda79 

ramp-13 =  
ramp-12 = 
ramp-11 = 
ramp-10 = 
ramp-9 = 
ramp-8 = 
ramp-7 = 
ramp-6 = 
ramp-5 = 
ramp-4 = 
ramp-3 = 
ramp-2 = 
ramp-1 = 
ramp-0 = 

enable-scroll = false 


[module/decor-glyph]
type = custom/text
content-foreground = #343434
margin = 0


[module/sep]
inherit = module/decor-glyph
content = "|"
